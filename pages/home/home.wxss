/* pages/home/home.wxss */

.header {
  height: 340px;
  /* background: #ccc; */
  background: linear-gradient(to bottom, #ccc, #fff);
  padding-top: 10px;
}

.header-card-outer {
  width: 90%;
  height: 180px;
  /* border: 1px solid red; */
  margin-left: auto;
  margin-right: auto;
  margin-top: 10px;
  display: flex;
  background: white;
  box-shadow: 1px 1px 1px grey;
  border-radius: 5px;
}

.card-image {
  flex: 1;
  /* background: url('../../images/liudehua.jpg'); *//* background: yellowgreen url('https://game.gtimg.cn/images/yxzj/img201606/heroimg/505/505.jpg') no-repeat fixed center padding-box ; *//* border: 1px solid yellow; */
}

.card-content {
  /* border: 1px solid green; */
  flex: 1;
  overflow: hidden;
  font-size: 0.6em;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.card-name {
  background: #ccc;
  display: flex;
  flex-direction: column;
  padding: 5px 5px 5px 25px;
}

.card-detail {
  padding: 5px;
  display: flex;
  flex-direction: column;
  text-align: right;
}

.button-hover {
  background-color: red;
}

.other-button-hover {
  background-color: blue;
}

.header-btns {
  margin: 0 auto;
  width: 90%;
}

.header-btns-inner {
  display: flex;
  /* justify-content: space-between; */
  padding: 10px 0 10px 0;
}

.header-info{
  display: flex;
  justify-content: space-between;
}
.header-info-detail{
  font-size: 0.6em;
  border: 1px solid #999999;
  padding: 5px;
  margin-right:8px; 
}
.header-visited{
  height: 30px;
  border: 1px solid yellowgreen;
  font-size: 0.6em;
  margin-top:10px; 
}

.main-container{
  height: 500px;
  background: rgba(255, 255, 255,0.8);
  margin-top: 10px;
}